<!-- any get requests come here first, reads file, finds the yeild and interperates whatever file matches the get request-->
<!DOCTYPE html>
<html>
    <head>
        <title>Houseplant Helper</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    </head>

    <body style="background-color: #C7E1BA!important;">
        <div class="row">
            <div class="col-md-4"> 
                <!-- leave empty so everything is centered -->
            </div>
            <div class="col-md-4">
                <% flash.keys.each do |type| %>
                    <div data-alert class="flash <%= type %> alert-danger text-center alert" role="alert">
                        <%= flash[type] %>
                    </div>
                <% end %>
                <%= yield %> 
            </div>
        </div>
    </body> 
</html>
