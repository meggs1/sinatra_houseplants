<figure class="text-center"><h1><%= @plant.name %> aka: <%= @plant.nickname %></h1></figure>
<table class="table">
    <tbody>
    <tr>
        <th scope="row">Watering:</th>
        <td><%= @plant.water %></td>
    </tr>
    <tr>
        <th scope="row">Lighting:</th> 
        <td><%= @plant.sunlight %></td>
    </tr>
    <tr>
    <th scope="row">Fertilizer:</td> 
        <td><%= @plant.fertilizer %></td>
    </tr>
    <tr>
    <th scope="row">Pet Safe:</td> 
        <td><%= @plant.pet_safe %></td>
    </tr>
    <tr>
    <th scope="row">Notes:</td> 
        <td><%= @plant.notes %></td>
    </tr>
</table>

<a type="submit" class="btn btn-outline-success" href="/plants/<%= @plant.id %>/edit">Edit plant</a>
<a type="submit" class="btn btn-outline-success" href="/plants">All plants</a>

