<h1>Edit <%= @plant.name %></h1>
<form action="/plants/<%= @plant.id %>" method="POST">
    <input type="hidden" value="PATCH" name="_method">
    <input type="text" name="plant[name]" placeholder="New Type"><br>
    <input type="text" name="plant[nickname]" placeholder="New Nickname"><br>
    <input type="text" name="plant[water]" placeholder="Update Watering Needs"><br>
    <input type="text" name="plant[fertilizer]" placeholder="Update Fertilizer Needs"><br>
    <input type="text" name="plant[notes]" placeholder="Update Other Notes"><br>
    <input type="submit" value="Edit">
</form>